<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:background="@color/white">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commodity :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commodity :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_variety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Variety :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_variety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Variety :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_arrival_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival Date :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_arrival_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival Date :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_min_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Price :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_min_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Price :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_max_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum Price :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_max_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum Price :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/label_modal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modal Price :"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_modal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modal Price :"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey"/>
            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>
</layout>